<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/expanded"
        app:constraintSetStart="@id/collapsed"
        app:duration="200"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/video_container"
            app:touchAnchorSide="top" />


        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/web_view" />

            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/web_view" />


        </KeyFrameSet>
    </Transition>



    <ConstraintSet android:id="@+id/expanded">

        <Constraint
            android:id="@id/video_container"
            android:layout_height="250dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/video_container"
            app:layout_constraintEnd_toEndOf="@id/video_container"
            app:layout_constraintStart_toStartOf="@id/video_container"
            app:layout_constraintTop_toTopOf="@id/video_container" />

        <Constraint
            android:id="@id/web_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_container" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">

        <Constraint
            android:id="@id/video_container"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/bottom_navigation_view_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:2.5"
            app:layout_constraintBottom_toBottomOf="@id/video_container"
            app:layout_constraintStart_toStartOf="@id/video_container"
            app:layout_constraintTop_toTopOf="@id/video_container" />

        <Constraint
            android:id="@id/web_view"
            android:layout_width="match_parent"
            android:layout_height="-1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_container" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/expanded"
        app:constraintSetStart="@+id/collapsed"
        app:duration="200">

        <OnClick
            app:targetId="@+id/video_container"
            app:clickAction="transitionToEnd"
            />

        <KeyAttribute
            android:alpha="1"
            app:framePosition="100"
            app:motionTarget="@id/web_view" />

        <KeyAttribute
            android:alpha="0"
            app:framePosition="0"
            app:motionTarget="@id/web_view" />
    </Transition>

    <ConstraintSet android:id="@+id/collapsed2">

        <Constraint
            android:id="@id/video_container"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/bottom_navigation_view_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:2.5"
            app:layout_constraintBottom_toBottomOf="@id/video_container"
            app:layout_constraintStart_toStartOf="@id/video_container"
            app:layout_constraintTop_toTopOf="@id/video_container" />

        <Constraint
            android:id="@id/web_view"
            android:layout_width="match_parent"
            android:layout_height="-1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_container" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded2">

        <Constraint
            android:id="@id/video_container"
            android:layout_height="250dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/player_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/video_container"
            app:layout_constraintEnd_toEndOf="@id/video_container"
            app:layout_constraintStart_toStartOf="@id/video_container"
            app:layout_constraintTop_toTopOf="@id/video_container" />

        <Constraint
            android:id="@id/web_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_container" />

    </ConstraintSet>

</MotionScene>